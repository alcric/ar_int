<ul class="nav">
  <li>
    <%= link_to (root_path) do %>
      <i class="icon-home icon-white"></i> <%= t 'always_resolve.home'  %>
    <% end  %>
  </li>

  <li>
    <%= link_to (products_path) do %>
      <i class="icon-leaf icon-white"></i> <%= t 'always_resolve.services'  %>
    <% end  %>
  </li>

  <li>
    <%= link_to (aboutus_path) do %>
      <i class="icon-question-sign icon-white"></i> <%= t 'always_resolve.aboutus'  %>
    <% end  %>
  </li>

  <li class="dropdown">
    <a href="#" class="dropdown-toggle"  data-toggle="dropdown">
      <i class="icon-flag icon-white"></i>
      <%= t 'always_resolve.language'%>
      <b class="caret"></b>
    </a>
    <ul class="dropdown-menu">
      <li>
        <%= link_to((t 'always_resolve.english'), "http://en.alwaysresolve.com:3000#{request.env['REQUEST_PATH']}") %>
      </li>
      <li>
        <%= link_to((t 'always_resolve.italian'), "http://it.alwaysresolve.com:3000#{request.env['REQUEST_PATH']}") %>
      </li>
    </ul>
  </li>

  <% if user_signed_in? %>
    <li>
      <%= link_to(edit_user_registration_path) do %>
        <i class="icon-cog icon-white"></i> <%= t 'always_resolve.edit_account'  %>
      <% end  %>
    </li>
  <% else %>
    <li>
      <%= link_to(new_user_registration_path)  do%>
        <i class="icon-plus-sign icon-white"></i> <%= t 'always_resolve.sign_up'  %>
      <% end  %>
    </li>
  <% end %>

  <% if user_signed_in? %>
    <li>
      <%= link_to(destroy_user_session_path, :method=>'delete') do %>
        <i class="icon-off icon-white"></i> <%= t 'always_resolve.logout'  %>
      <% end  %>
    </li>
  <% else %>
    <li>
    <%= link_to(new_user_session_path) do %>
      <i class="icon-ok-sign icon-white"></i> <%= t 'always_resolve.login'  %>
    <% end  %>
    </li>
  <% end %>
</ul>
<% if user_signed_in? %>
<ul class="nav pull-right">
  <li class="active">
    <a class="brand" href="#">
      <%= gravatar_image_tag(current_user.email, :alt => "#{current_user.name} #{current_user.surname}", :class => "gravatar", :gravatar => { :size => 30 }) %>
      <i><%= t 'always_resolve.hello' %>, <%= current_user.name %></i>
    </a>
  </li>
</ul>
<% end %>
