<% provide(:title, ((t 'always_resolve.sign_up').to_s.capitalize)) %>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-vertical' }) do |f| %>
  <% unless devise_error_messages!.blank? %>
    <div class="alert alert-error">
      <%= devise_error_messages! %>
    </div>
  <% end %>
  <%= f.input :name, :label => (t 'always_resolve.firstname'), :required => true %>
  <%= f.input :surname, :label => (t 'always_resolve.secondname'), :required => true %>
  <%= f.input :company, :label => (t 'always_resolve.farm'), :required => false %>
  <%= f.input :address1, :label => (t 'always_resolve.address'), :required => true %>
  <%= f.input :address2, :label => (t 'always_resolve.address'), :required => false %>
  <%= f.input :city, :label =>  (t 'always_resolve.city'), :required => true%>
  <%= f.input :zip, :label => (t 'always_resolve.zip'), :required => true, :as => :integer, :maxlength => 5 %>
  <%= f.input :state, :label => (t 'always_resolve.country') , :required => true%>
  <%= f.input :country, :label => (t 'always_resolve.state') , :required => true%>
  <%= f.input :vat, :label => (t 'always_resolve.vat'), :required => false %>
  <%= f.input :fiscal_code, :label => (t 'always_resolve.cf') , :required => true%>
  <%= f.input :telephone, :label => (t 'always_resolve.phone') , :required => false, :as => :tel%>
  <%= f.input :fax, :label => (t 'always_resolve.fax') , :required => false, :as => :tel%>
  <%= f.input :email, :label => (t 'always_resolve.email') , :required => true%>
  <%= f.input :password, :label => (t 'always_resolve.password') , :required => true%>
  <%= f.input :password_confirmation, :label => (t 'always_resolve.password_confirmation'), :required => true %>
  <%= f.button :submit %>
<% end %>

<%= render "links" %>
