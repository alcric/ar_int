<% provide(:title, (t 'always_resolve.change_your_password').to_s.capitalize) %>

<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :class => 'form-vertical' }) do |f| %>
  <% unless devise_error_messages!.blank? %>
    <div class="alert alert-error">
      <%= devise_error_messages! %>
    </div>
  <% end %>
  <%= f.hidden_field :reset_password_token %>
  <%= f.input :password, :label => (t 'always_resolve.new_password') %>
  <%= f.input :password_confirmation, :label => (t 'always_resolve.confirm_new_password') %>
  <%= f.button :submit, (t 'always_resolve.change_my_password') %>
<% end %>

<%= render "links" %>