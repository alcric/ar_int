<% provide(:title, (t 'always_resolve.forgot_your_password').to_s.capitalize) %>

<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => 'form-vertical' }) do |f| %>
  <% unless devise_error_messages!.blank? %>
    <div class="alert alert-error">
      <%= devise_error_messages! %>
    </div>
  <% end %>
  <%= f.input :email, :label => (t 'always_resolve.email') %>
  <%= f.button :submit, (t 'always_resolve.send_me_reset_password_instructions') %>
<% end %>

<%= render "links" %>