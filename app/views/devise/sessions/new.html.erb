<% provide(:title, (t 'always_resolve.login').to_s.capitalize) %>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-vertical' }) do |f| %>
  <% unless devise_error_messages!.blank? %>
    <div class="alert alert-error">
      <%= devise_error_messages! %>
    </div>
  <% end %>
  <%= f.input :email, :label => (t 'always_resolve.email') %>
  <%= f.input :password, :label => (t 'always_resolve.password') %>

  <% if devise_mapping.rememberable? -%>
    <%= f.check_box :remember_me %> <%= f.label (t 'always_resolve.rememberme') %>
  <% end -%>

  <div><%= f.button :submit, (t 'always_resolve.login') %></div>
<% end %>

<%= render "links" %>